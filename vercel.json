{
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/assets/.*\\.js$",
      "headers": {
        "content-type": "application/javascript",
        "cache-control": "public, immutable, max-age=31536000"
      }
    },
    {
      "src": "/assets/.*\\.css$",
      "headers": {
        "content-type": "text/css",
        "cache-control": "public, immutable, max-age=31536000"
      }
    },
    {
      "src": "/assets/(.*)",
      "headers": {
        "cache-control": "public, immutable, max-age=31536000"
      }
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}